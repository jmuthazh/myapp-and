<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/upload_fragment"
    tools:context="io.confirm.sample.UploadFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/upload_img_f"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_weight="0.20"
            app:srcCompat="@mipmap/document_upload_icon"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/processLabel_f"
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.25"
            android:text="@string/processing" />

        <ProgressBar
            android:id="@+id/progressbar_f"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.16"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/percentage_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"

            android:text="0 %" />

    </LinearLayout>


</FrameLayout>
